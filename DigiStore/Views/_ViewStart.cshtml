	switch (currentCultureName)
	{
		case "fa":
		case "ar":
		{
			Layout =
				"Layouts/RTL/_AdminLayout";

			break;
		}

		default:
		{
			Layout =
				"Layouts/LTR/_AdminLayout";
			break;
		}
	}
}


