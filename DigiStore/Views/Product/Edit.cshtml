@model DigiStore.Models.ProductModel

@{
    ViewData["Title"] = Resources.Titles.ProductEdit;
}

<h1>@(Resources.Titles.ProductEdit)</h1>
<h4>@(Resources.DataDictionary.ProductModel)</h4>


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@(Resources.DataDictionary.ProductId)" class="control-label">@(Resources.DataDictionary.ProductId)</label>
                <input asp-for="@(Resources.DataDictionary.ProductId)" class="form-control" />
                <span asp-validation-for="@(Resources.DataDictionary.ProductId)" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@(Resources.DataDictionary.ProductName)" class="control-label">@(Resources.DataDictionary.ProductName)</label>
                <input asp-for="@(Resources.DataDictionary.ProductName)" class="form-control" />
                <span asp-validation-for="@(Resources.DataDictionary.ProductName)" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@(Resources.DataDictionary.CategoryId)" class="control-label">@(Resources.DataDictionary.CategoryId)</label>
                @*<input asp-for="CategoryId" class="form-control" />*@
                <select class="form-control" asp-for="@(Resources.DataDictionary.CategoryId)" asp-items="@(new SelectList((List<CategoryModel>)ViewData["Categories"],"CategoryId","CategoryName"))"></select>
                <span asp-validation-for="@(Resources.DataDictionary.CategoryId)" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@(Resources.DataDictionary.Price)" class="control-label">@(Resources.DataDictionary.Price)</label>
                <input asp-for="@(Resources.DataDictionary.Price)" class="form-control" />
                <span asp-validation-for="@(Resources.DataDictionary.Price)" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@(Resources.ButtonCaptions.Save)" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@(Resources.ButtonCaptions.BackToList)</a>
</div>